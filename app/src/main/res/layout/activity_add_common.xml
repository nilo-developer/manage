<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    tools:context=".activity.AddCommonActivity">


    <com.sanojpunchihewa.glowbutton.GlowButton
        android:id="@+id/btn_add_common"
        style="@style/myfont"
        android:layout_width="120dp"
        android:layout_height="74dp"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="20dp"
        android:text="ثبت"
        android:textColor="@color/black"
        app:buttonColor="#B2EBF2"
        app:cornerRadius="40dp"
        app:glowColor="#DD4513"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_cancel_common"
        app:layout_constraintHorizontal_bias="0.672"
        app:layout_constraintStart_toStartOf="parent"
        app:pressedGlowSize="25dp"
        app:unpressedGlowSize="20dp"
        tools:ignore="MissingConstraints" />

    <com.sanojpunchihewa.glowbutton.GlowButton
        android:id="@+id/btn_cancel_common"
        style="@style/myfont"
        android:layout_width="120dp"
        android:layout_height="74dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="50dp"
        android:text="انصراف"
        android:textColor="@color/black"
        app:buttonColor="#B2EBF2"
        app:cornerRadius="40dp"
        app:glowColor="#DD4513"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:pressedGlowSize="25dp"
        app:unpressedGlowSize="20dp"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="405dp"
        android:layout_height="103dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="320dp"
            android:layout_height="61dp"
            style="@style/myfont"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/back_shape"
            android:hint="نام"
            android:textColor="#212121"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="405dp"
        android:layout_height="103dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
        tools:ignore="MissingConstraints">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="320dp"
            android:layout_height="61dp"
            style="@style/myfont"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/back_shape"
            android:hint="نام خانوادگی"
            android:textColor="#212121"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="405dp"
        android:layout_height="103dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        tools:ignore="MissingConstraints">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="320dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            style="@style/myfont"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/back_shape"
            android:hint="کد ملی"
            android:inputType="number"
            android:textColor="#212121"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout4"
        android:layout_width="405dp"
        android:layout_height="103dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout5"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="320dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            style="@style/myfont"
            android:background="@drawable/back_shape"
            android:hint="جنسیت"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout5"
        android:layout_width="405dp"
        android:layout_height="103dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"
        tools:ignore="MissingConstraints">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="320dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            style="@style/myfont"
            android:layout_marginEnd="10dp"
            android:layoutDirection="rtl"
            android:background="@drawable/back_shape"
            android:hint="آدرس"
            android:textColor="#212121"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>